{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/lib/": ["src/lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.css", "**/*.tsx", ".next/types/**/*.ts", "src/api/**/**.ts"],
  "exclude": ["node_modules",]
}
